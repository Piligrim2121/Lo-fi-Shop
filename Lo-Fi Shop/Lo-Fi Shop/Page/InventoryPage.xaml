<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lo_Fi_Shop.Page.InventoryPage"
             BackgroundImageSource="Resources/drawable/EmptyInventory.jpg">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image x:Name="hz" 
                   Grid.RowSpan="6" 
                   Grid.ColumnSpan="6" 
                   Source=""  />

            <TableView x:Name="InventoryTableView" Grid.Column="1"></TableView>

            <Label x:Name="DescreptionLabel" Grid.Column="0"></Label>
            <Label x:Name="PriceLabel" Grid.Column="0"></Label>
        </Grid>
    </ContentPage.Content>
</ContentPage>