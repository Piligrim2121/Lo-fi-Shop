<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lo_Fi_Shop.Page.PageAboutAuthors"
             BackgroundImage="Resources/drawable/empty.png">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="АРДАМАНА"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Grid>
                <Image
            x:Name="BacgroundGif"
            Source="Resources/drawable/menuAndr.gif"  
          
            Grid.RowSpan="2"
            Grid.ColumnSpan="3"
            />
                <Image x:Name="anim" Source="Resources/drawable/x_logo.gif" Grid.Row="0"  IsAnimationPlaying="False" Grid.Column="1"></Image>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>